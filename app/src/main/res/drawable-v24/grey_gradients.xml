<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#676969" />
            <stroke
                android:width="1dp"
                android:color="#686969" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7B7C7E"
                android:endColor="#545555"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#343535" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>