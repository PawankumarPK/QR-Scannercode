<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                tools:context=".fragments.HomeFragment">


    <LinearLayout
            android:id="@+id/mLinearLayoutOne"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp">

        <androidx.cardview.widget.CardView
                android:id="@+id/mAddCardview"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="4.5"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#E93F51B5">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Stocks"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_light"/>

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_add_box"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="5.5"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#FFC107">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Stocks"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_light"/>

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_minus"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/mLinearLayoutTwo"
            android:layout_below="@+id/mLinearLayoutOne"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp">

        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="5.5"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#FF5722">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dailywise Stocks"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_light"/>

            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_dailystocks"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="4.5"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#5A5757">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Stocks"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_light"/>

            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_totalstocks"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>